

  <h1>Films (click for reviews)</h1>

<div>
    <%form_tag films_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
    <% end %>
  </div>
  
<% @films.each do |film| %><br>
<%= link_to film.title, film_path(film) %><br>
<%= film.director %><br>
<%= film.studio %><br>
<% end %>
<div>
<h1><%= link_to 'Add a film', new_film_path %></h1>
</div>
